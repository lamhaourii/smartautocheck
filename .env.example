# =============================================================================
# SmartAutoCheck - Environment Variables
# =============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
NODE_ENV=development
LOG_LEVEL=info

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=smartautocheck
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_DB=smartautocheck_db
DB_SSL=false

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate secure secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-256-bit-secret-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# =============================================================================
# PAYPAL PAYMENT GATEWAY
# =============================================================================
# Get credentials from: https://developer.paypal.com/
PAYPAL_CLIENT_ID=your-sandbox-client-id
PAYPAL_CLIENT_SECRET=your-sandbox-client-secret
PAYPAL_MODE=sandbox
PAYPAL_RETURN_URL=http://localhost:3010/payment/success
PAYPAL_CANCEL_URL=http://localhost:3010/payment/cancel

# =============================================================================
# KAFKA MESSAGE BROKER
# =============================================================================
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=smartautocheck

# =============================================================================
# EMAIL SERVICE (SMTP)
# =============================================================================
# For Gmail: Enable "App Passwords" in Google Account settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@smartautocheck.com

# Alternative: SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# =============================================================================
# SMS SERVICE (Twilio)
# =============================================================================
# Get credentials from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# CERTIFICATE SECURITY
# =============================================================================
# Generate secure secret for certificate digital signatures
CERTIFICATE_SECRET=your-certificate-signing-key-change-in-production

# =============================================================================
# SERVICE PORTS
# =============================================================================
API_GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
APPOINTMENT_SERVICE_PORT=3002
PAYMENT_INVOICE_SERVICE_PORT=3004
INSPECTION_CERTIFICATION_SERVICE_PORT=3005
FRONTEND_PORT=3010

# =============================================================================
# SERVICE URLs (Internal Docker Network)
# =============================================================================
API_GATEWAY_URL=http://api-gateway:3000
USER_SERVICE_URL=http://user-service:3001
APPOINTMENT_SERVICE_URL=http://appointment-service:3002
PAYMENT_INVOICE_SERVICE_URL=http://payment-invoice-service:3004
INSPECTION_CERTIFICATION_SERVICE_URL=http://inspection-certification-service:3005

# =============================================================================
# FRONTEND URL (Public)
# =============================================================================
FRONTEND_URL=http://localhost:3010
NEXT_PUBLIC_API_URL=http://localhost:3000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:3010
CORS_CREDENTIALS=true

# =============================================================================
# OBSERVABILITY - PROMETHEUS
# =============================================================================
PROMETHEUS_PORT=9090

# =============================================================================
# OBSERVABILITY - GRAFANA
# =============================================================================
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me-in-production

# =============================================================================
# OBSERVABILITY - JAEGER (Distributed Tracing)
# =============================================================================
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
JAEGER_UI_PORT=16686

# =============================================================================
# OBSERVABILITY - LOKI (Log Aggregation)
# =============================================================================
LOKI_PORT=3100

# =============================================================================
# REDIS (Rate Limiting Only)
# =============================================================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# =============================================================================
# KAFKA UI (Optional - Development Tool)
# =============================================================================
KAFKA_UI_PORT=8080

# =============================================================================
# AWS S3 (Optional - For Production File Storage)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=smartautocheck-files

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_AUTHENTICATED=100
RATE_LIMIT_ANONYMOUS=20
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# NEXTAUTH (Frontend Authentication)
# =============================================================================
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production
NEXTAUTH_URL=http://localhost:3010

# =============================================================================
# GOOGLE OAUTH (Optional)
# =============================================================================
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# =============================================================================
# SENTRY ERROR TRACKING (Optional - Production)
# =============================================================================
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# =============================================================================
# NOTES
# =============================================================================
# 1. Generate JWT_SECRET: openssl rand -base64 32
# 2. Generate CERTIFICATE_SECRET: openssl rand -hex 32
# 3. PayPal sandbox credentials: https://developer.paypal.com/dashboard/
# 4. Gmail App Password: https://myaccount.google.com/apppasswords
# 5. Twilio credentials: https://console.twilio.com/
# 6. Never commit this file with real credentials!
